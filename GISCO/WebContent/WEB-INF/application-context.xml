<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

<!-- Data Source Declaration -->

	<bean id="DataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://localhost/gisbdS?zeroDateTimeBehavior=convertToNull" />
		<property name="username" value="root" />
		<property name="password" value="" />
	</bean>
	

 <!-- Session Factory Declaration -->
    <bean id="SessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="DataSource" />
        <property name="mappingResources">
            <list>
                 <!-- Les fichiers de mapping de la BD -->
        <value>hibernate/configuration/Absence.hbm.xml</value>
        <value>hibernate/configuration/Activites.hbm.xml</value>
        <value>hibernate/configuration/Adresses.hbm.xml</value>
        <value>hibernate/configuration/Anneeconcours.hbm.xml</value>
        <value>hibernate/configuration/Annees.hbm.xml</value>
        <value>hibernate/configuration/Avoir.hbm.xml</value>
       <value>hibernate/configuration/Caisconcours.hbm.xml</value>
        <value>hibernate/configuration/Campus.hbm.xml</value>
        <value>hibernate/configuration/Candidat.hbm.xml</value>
        <value>hibernate/configuration/CandidatSalle.hbm.xml</value>
        <value>hibernate/configuration/Candidature.hbm.xml</value>
       <value>hibernate/configuration/Concours.hbm.xml</value>
        <value>hibernate/configuration/Correspondre.hbm.xml</value>
       <value>hibernate/configuration/Detailcampus.hbm.xml</value>
       <value>hibernate/configuration/Diplomes.hbm.xml</value>
        <value>hibernate/configuration/Echeance.hbm.xml</value>
        <value>hibernate/configuration/Ecolages.hbm.xml</value>
       <value>hibernate/configuration/Ecole.hbm.xml</value>
       <value>hibernate/configuration/EtudiantCandidature.hbm.xml</value>
       <value>hibernate/configuration/Etudiants.hbm.xml</value>
        <value>hibernate/configuration/Filieres.hbm.xml</value>
        <value>hibernate/configuration/Inscriptionconcours.hbm.xml</value>
       <value>hibernate/configuration/Inscriptions.hbm.xml</value>
        <value>hibernate/configuration/Logement.hbm.xml</value>
        <value>hibernate/configuration/Loger.hbm.xml</value>
        <value>hibernate/configuration/Matiere.hbm.xml</value>
        <value>hibernate/configuration/Matiereconcours.hbm.xml</value>
        <value>hibernate/configuration/MatiereExam.hbm.xml</value>
        <value>hibernate/configuration/Matrimoniales.hbm.xml</value>
        <value>hibernate/configuration/Meres.hbm.xml</value>
        <value>hibernate/configuration/Mode.hbm.xml</value>
        <value>hibernate/configuration/Motif.hbm.xml</value>
        <value>hibernate/configuration/Nationalites.hbm.xml</value>
        <value>hibernate/configuration/Nature.hbm.xml</value>
        <value>hibernate/configuration/Niveaux.hbm.xml</value>
        <value>hibernate/configuration/Noteconcours.hbm.xml</value>
        <value>hibernate/configuration/Notes.hbm.xml</value>
        <value>hibernate/configuration/Notexam.hbm.xml</value>
        <value>hibernate/configuration/Origine.hbm.xml</value>
        <value>hibernate/configuration/Parammatiere.hbm.xml</value>
        <value>hibernate/configuration/Parammatierexam.hbm.xml</value>
        <value>hibernate/configuration/Pays.hbm.xml</value>
        <value>hibernate/configuration/Peres.hbm.xml</value>
        <value>hibernate/configuration/Professions.hbm.xml</value>
        <value>hibernate/configuration/Regime.hbm.xml</value>
        <value>hibernate/configuration/Salles.hbm.xml</value>
        <value>hibernate/configuration/Santes.hbm.xml</value>
        <value>hibernate/configuration/Scolarites.hbm.xml</value>
        <value>hibernate/configuration/Section.hbm.xml</value>
        <value>hibernate/configuration/Semestre.hbm.xml</value>
        <value>hibernate/configuration/Sexes.hbm.xml</value>
        <value>hibernate/configuration/Tuteurs.hbm.xml</value>
        <value>hibernate/configuration/TypeMatiere.hbm.xml</value>
        <value>hibernate/configuration/Typematiereconcours.hbm.xml</value>
        <value>hibernate/configuration/TypeMatiereExam.hbm.xml</value>
        <value>hibernate/configuration/Versement.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>
 
 <!-- Enable the configuration of transactional behavior based on annotations -->
    <tx:annotation-driven transaction-manager="txManager"/>
     
   
 
    <!-- Transaction Manager is defined -->
    <bean id="txManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
       <property name="sessionFactory" ref="SessionFactory"/>
    </bean>
    
     <!-- User DAO Declaration -->
    <bean id="Dao" class="objetDao.Dao">
        <property name="sessionFactory" ref="SessionFactory"/>
    </bean>
    
     <!-- User Service Declaration -->
    <bean id="Service" class="objetService.Service">
        <property name="dao" ref="Dao" />
    </bean>
    
    
</beans>
